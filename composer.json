{
    "name": "grizz-it/dbal-pdo",
    "description": "Database abstraction layer package implementing PDO",
    "keywords": ["dbal", "pdo"],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require":
    {
        "php": "^8.0",
        "grizz-it/dbal": "^1.0"
    },
    "authors": [
        {
            "name": "Grizz-IT",
            "homepage": "https://www.grizz-it.com/",
            "role": "Developer"
        }
    ],
    "config":
    {
        "sort-packages": true
    },
    "autoload":
    {
        "psr-4":
        {
            "GrizzIt\\Dbal\\Pdo\\": "src/"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "GrizzIt\\Dbal\\Pdo\\Tests\\": "tests/"
        }
    },
    "archive":
    {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev":
    {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
